{% if form.status == 'online' %}
    
<a name="formAnswer"></a>
{% if formComplete %}
    {{ form.thankYouText|raw }}
{% else %}
    {% form_theme formView '@MopaBootstrap/Form/fields.html.twig' %}
    {{ form.infoText|raw }}

    {% if formError == 'email-wrong' %}
        <p> <strong>{{ 'errorEmail'|trans({}, 'formGenerator') | raw }}</strong></p>
    {% elseif formError != '' %}
        <p><strong> {{ 'errorForm'|trans({}, 'formGenerator') | raw }}</strong></p>
    {% endif %}

    {{ form_start(formView, {'attr': {'class': 'content_form form-horizontal', 'novalidate': 'novalidate' }}) }}
    <fieldset>


        {#{{ dump(formView) }}#}
        {% for child in formView.children %}




            {% if child.vars.attr.formType is defined and child.vars.attr.formType == 'Search Input'  %}
                

                <div  class="form-group">
                    <label for="generated_form_textinput" class="control-label col-sm-3 optional">
                    {{ child.vars.label }}


                    </label>
                    <div class="col-sm-9">
                        {{ child.vars.attr.value | raw | nl2br  }}
                    </div>
                </div>
                {#feld verstecken#}
                <div id="divCheckbox" style="display: none;"> {{ form_row(child) }}</div>
            {% else %}


            {{ form_row(child) }}

            {% endif %}

        {% endfor %}


        {#{{ form(formView) }}#}
        <div class="button_div">
            <input type="submit" name="submit" id="submit" value="Weiter" class="btn btn-primary">
        </div>
    </fieldset>
    {{ form_end(formView) }}
{% endif %}

{% endif %}